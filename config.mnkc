# port for the server to accept requests at
port: 8484
handlers:
  - id: hello_world
    method: GET
    route: hello/world
    response:
      status: 200
      body: hello world!
  - id: goodbye_world
    method: POST
    route: goodbye/world
    response:
      status: 500
      body: goodbye world!
  - id: parameterized_point
    method: GET
    route: things/are/{check}
    response:
      status: 200
      body: they are the same